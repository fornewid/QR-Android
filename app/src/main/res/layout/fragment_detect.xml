<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.detect.BarcodeDetectFragment">

        <androidx.camera.view.CameraView
            android:id="@+id/cameraView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:captureMode="image"
            app:lensFacing="back"
            app:pinchToZoomEnabled="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/qrHint"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="80dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_qr_hint"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/qrHint1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_qr_hint1"
            app:layout_constraintStart_toStartOf="@id/qrHint"
            app:layout_constraintTop_toTopOf="@id/qrHint"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/qrHint2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_qr_hint2"
            app:layout_constraintEnd_toEndOf="@id/qrHint"
            app:layout_constraintTop_toTopOf="@id/qrHint"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/qrHint3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_qr_hint3"
            app:layout_constraintBottom_toBottomOf="@id/qrHint"
            app:layout_constraintStart_toStartOf="@id/qrHint"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/qrHint4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_qr_hint4"
            app:layout_constraintBottom_toBottomOf="@id/qrHint"
            app:layout_constraintEnd_toEndOf="@id/qrHint"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
